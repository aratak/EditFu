%h2 Preferences
#actions
  = link_to 'Edit', edit_preferences_path

%table.card
  %tr
    %th Name
    %td= @preferences.name
  %tr
    %th Email
    %td= @preferences.email
  - if current_user.owner?
    %tr
      %th Plan
      %td
        = @preferences.plan.humanize
        = link_to 'Change', edit_preferences_plan_path

- if current_user.owner?
