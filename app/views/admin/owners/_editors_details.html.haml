- add_stylesheet "editors_details"%table.editors_details  %caption Editors info  %thead    %tr      %th Name      %th Email Address      %th Created at  %tbody    - sort_users(@owner.editors).each do |editor|      %tr        %td          - link_to admin_owner_path(editor), :class => 'label', :title => editor.user_name do            %span.text= editor.user_name        %td          = mail_to editor.email        %td{:title => editor.created_at}= editor.created_at.to_date