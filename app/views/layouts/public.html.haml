!!! transitional
%html
  %head
    %title= @title
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }

    = stylesheet_link_tag 'reset', 'public', 'input', 'action_bar', 'messages'
    = javascript_include_tag :defaults, 'css'
  %body.public{:class => (@company_logo.blank? ? nil : 'company')}
    - if @company_logo.present?
      #company-logo= @company_logo
    - else
      %img#art-bg(src='/images/public-bg.jpg')
      %img#editfu-logo(src='/images/editfu.png')
    #main
      = yield
    #action-bar
    = render 'layouts/message'
