!!! transitional
%html
  %head
    %title= @title
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    = render 'layouts/favicon'

    = stylesheet_link_tag 'reset', 'public', 'input', 'action_bar', 'messages', 'flash'
    = javascript_include_tag :defaults, 'css', 'public'
  %body.public{:class => (@company_logo.blank? ? 'general' : 'company')}
    #all
      - if @company_logo.present?
        #company-logo= @company_logo
      - else
        %img#editfu-logo(src='/images/editfu.png')
      #main
        = yield
      #action-bar
    = render 'layouts/flash'
