!!! transitional
%html
  %head
    %title= @title || 'Edit-Fu'
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    = stylesheet_link_tag 'reset', 'layout', 'messages', 'source_bar', 'system_bar', 'action_window', 'action_bar', :cache => true
    = javascript_include_tag :defaults, 'tree', 'upload', :cache => true

  %body
    #all
      #system-bar
        = yield :tabs
        = link_to "", root_path, :class => "logo"

        = link_to 'Logout', destroy_user_session_path, :class => 'system-link'
        - link_to '#', :class => 'system-link', :alt => 'Help' do
          %img(src='/images/help.png')
        - link_to preferences_path, :class => 'system-link', :alt => 'Preferences' do
          %img(src='/images/preferences.png')

      #source-bar
        = yield :sourceBar

      #action-window
        #main
          -if @title && @hint
            .header
              %span.title= @title
              %span.actions
                = yield :actions
              .hint
                %span.nbsp &nbsp;
                = @hint
          = yield
          .clear

      #page-message.message(style='display: none;')
    
      #action-bar

    - if message_kind
      :javascript
        showMessage("#{message_kind}", "#{flash[message_kind]}");
