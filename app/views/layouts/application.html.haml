!!! strict
%html
  %head
    %title Edit-Fu
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults, :cache => true


  %body
    #systemBar
      - if user_signed_in?
        = link_to 'Logout', destroy_user_session_path
    #sourceBar
      = yield :sourceBar
    #actionWindow
      = yield
    #actionBar
      = yield :actionBar
