/ %h2 Editor Signup

- form_for @editor, :html => { :method => :put }, :url => { :action => "update", |
    :confirmation_token => @editor.confirmation_token } do |f| |

  = f.error_messages
  .inputs
    .label-input
      = f.text_field :user_name
      = f.label :user_name
      
    .label-input
      = f.password_field :password
      = f.label :password

    .label-input
      = f.password_field :password_confirmation
      = f.label :password_confirmation
    = submit_tag :submit, :class => 'submit'