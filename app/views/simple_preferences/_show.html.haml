#simple-preferences-popup.one-column-popup
  %h1 Preferences
  - remote_form_for :preferences, current_user, :url => simple_preferences_path, :html => { :method => :put } do |f|
    .inputs
      .username.title-input.first
        .title Update your name
        .label-input
          = f.text_field 'user_name'
          = f.label 'user_name'
      .email.title-input
        .title Update your email
        .label-input
          = f.text_field 'email'
          = f.label 'email'
      .current-password.title-input
        .title Change your password
        .label-input
          = f.password_field 'current_password'
          = f.label 'current_password'
      .password.label-input
        = f.password_field 'password'
        = f.label 'password', 'New password'
      .password-confirmation.label-input
        = f.password_field 'password_confirmation'
        = f.label 'password_confirmation', 'Confirm password'
      .clear

    .popup-action-bar
      %small.description Update your name, email, or password and click update.
      = f.submit "Update"
      = link_to_function "Cancel", "hidePopup();", :class => 'cancel'
