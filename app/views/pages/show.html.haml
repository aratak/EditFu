= content_for :sourceBar do
  - @sites.each do |site|
    .site{ site_attributes(site) }
      = site.name
      - if site == @site
        - site.pages.each do |page|
          %a.page{ page_attributes(page), :href=>page_path(page)}= page.path

%h2=@page.path
#actions
  %a(href='#') View
  %a(href='#') Settings
  %a(href='#') Remove Page

- @page.sections.each_with_index do |section,index|
  .section{:id=>"section_#{index}"}
    %textarea=section
