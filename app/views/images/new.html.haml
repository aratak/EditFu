- @title = 'Insert/Edit Image'
= content_for :body do
  = stylesheet_link_tag 'image'
  = javascript_include_tag 'image', 'tiny_mce/tiny_mce_popup', 'tiny_mce/utils/mctabs'

  - form_tag site_images_path(@site), |
    :id => 'image_form', :multipart => true, |
    :method => :post, :onsubmit => 'return false;' do |

    = hidden_field_tag :type, @type

    - field_set_tag 'URL' do
      #images
        = render :partial => 'show', :collection => @images, :as => :name
      .clearLeft

      %table.urlBox
        %tr
          %td
            = label_tag 'image', 'Upload:' 
            = file_field_tag 'image', :id => 'uploadImage'
          %td
            = label_tag 'src', 'Image URL:'
            = text_field_tag 'src'

    - field_set_tag 'Alt' do
      .altBox
        = label_tag 'alt', 'Alt:' 
        = text_field_tag 'alt'

    .mceActionPanel
      .messages
        #success
        #failure
        #processing(style='display: none;') Uploading image to the server...

      .buttons
        = submit_tag 'Submit', :id => 'submitButton'
        = submit_tag 'Cancel', :onclick => 'tinyMCEPopup.close(); return false;'
