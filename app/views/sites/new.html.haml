= stylesheet_link_tag 'popup', 'tree2'
= javascript_include_tag 'popup', 'tree2'

#new-site.popup
  %h1 New Site
  - form_for @site, :html => { :id => 'site_form' } do |form|
    = form.error_messages
    .tree-area
      .input-hint Choose the site root
      #ftp-tree
    .inputs
      = popup_input 'Server Name', form.text_field(:name)
      = popup_input 'ftp.mywebsite.com', form.text_field(:server)
      = popup_input 'www.mywebsite.com', form.text_field(:site_url)
      = popup_input 'Login', form.text_field(:login)
      = popup_input 'Password', form.password_field(:password)
      = form.hidden_field :site_root

  .popup-hint *Click within the content above to edit it
  .message(style='display: none;')
  .action-bar
    = link_to_function 'Save', 'return submitPopup(this);'
    = link_to 'Cancel', '#', :class => 'cancel'

:javascript
  SiteFtpTree.initForm();
