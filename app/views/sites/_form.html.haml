= stylesheet_link_tag 'tree'
= javascript_include_tag 'tree'

.site-popup#new-site-popup
  - form_for @site, :html => { :id => 'site_form', :onsubmit => 'return false;' } do |form|
    = render 'shared/tree_input', :hint => 'Choose the site root', :form => form, :hidden => :site_root
    .inputs
      - label_input @site.name || 'Server Name' do 
        = form.text_field(:name)
      - label_input @site.server || 'ftp.mywebsite.com' do
        = form.text_field(:server)
      - label_input @site.site_url || 'www.mywebsite.com' do
        = form.text_field(:site_url)
      - label_input @site.login || 'Login' do 
        = form.text_field(:login)
      - label_input 'Password' do
        = form.password_field(:password)

:javascript
  SiteFtpTree.initForm(#{@site.id});
