- @description = ""
- inside_layout 'public' do
  = stylesheet_link_tag 'public/forgot-password'
  - form_for :user, :url => password_path(:user) do |f|
    .inputs
      = f.submit 'Send', :class => 'submit'
      .label-input
        = f.error_for :user_email
        = text_field_tag 'user[email]', @user.email, :placeholder => "User email"
      .label
        Forgot your password? <br /> Enter your email address:
    .clear
    .hint
      Nevermind, send me back to the 
      = link_to 'log in screen.', new_session_path(:user)
      %br
      Not an EditFu Member? 
      = link_to 'Learn More', 'http://www.editfuapp.com/', :target => "_blank"
      or 
      = link_to 'Sign up', new_owner_path
