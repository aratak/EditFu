= stylesheet_link_tag 'nocontent'

.all_wrapper
  .nosites
    .wrapper
      .inside
        - if @editors.empty?
          Currently there are no editors.
          %br
          Invite others so they can update content as well.
          %br
          = render "layouts/action_bars/add_editor"
        - else
          Select an editor in the sidebar.
    .helper
  - if @editors.empty?
    = help_link_for :add_editors
  -else
    = help_link_for :choose_editors
